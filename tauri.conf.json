{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "cloubit",
	"version": "0.0.1",
	"identifier": "cloubit",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "./dist",
		"removeUnusedCommands": true
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "Cloubit",
				"minWidth": 1050,
				"minHeight": 590,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["public/icons/icon.icns", "public/icons/icon.ico", "public/icons/icon.png"],
		"publisher": "bilirumble",
		"copyright": "Copyright © 2025 bilirumble",
		"category": "Music",
		"shortDescription": "第三方网易云音乐播放器",
		"longDescription": "第三方网易云音乐播放器, 基于Tauri2开发",
		"homepage": "https://github.com/bilirumble/cloubit",
		"license": "MIT",
		"externalBin": [],
		"resources": []
	}
}
